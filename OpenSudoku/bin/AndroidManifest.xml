<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="auto" android:versionCode="2" android:versionName="1.0.0" package="com.fairket.app.opensudoku">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19"/>

    <application android:icon="@drawable/opensudoku_logo_72" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.FolderListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.SudokuListActivity">
        </activity>
        <activity android:label="@string/edit_sudoku" android:name="cz.romario.opensudoku.gui.SudokuEditActivity">
            <intent-filter>
                <action android:name="android.intent.action.INSERT"/>
                <action android:name="android.intent.action.EDIT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.FileImportActivity" android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.VIEW">
                </action>

                <category android:name="android.intent.category.DEFAULT">
                </category>
                <category android:name="android.intent.category.BROWSABLE">
                </category>

                <data android:host="*" android:pathPattern=".*\\.sdm" android:scheme="file"/>
                <data android:host="*" android:pathPattern=".*\\.sdm" android:scheme="http"/>
                <data android:host="*" android:pathPattern=".*\\.opensudoku" android:scheme="file"/>
                <data android:host="*" android:pathPattern=".*\\.opensudoku" android:scheme="http"/>
            </intent-filter>
        </activity>
        <!-- This activity is here to keep backward compatibility, use SudokuImportActivity instead. -->
        <activity android:name="cz.romario.opensudoku.gui.ImportSudokuActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW">
                </action>

                <category android:name="android.intent.category.DEFAULT">
                </category>
                <category android:name="android.intent.category.BROWSABLE">
                </category>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.SudokuImportActivity" android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.VIEW">
                </action>

                <category android:name="android.intent.category.DEFAULT">
                </category>
                <category android:name="android.intent.category.BROWSABLE">
                </category>

                <data android:mimeType="application/x-opensudoku"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.SudokuExportActivity">
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.SudokuPlayActivity">
        </activity>
        <activity android:label="@string/game_settings" android:name="cz.romario.opensudoku.gui.GameSettingsActivity">
        </activity>
        <activity android:label="@string/app_name" android:name="cz.romario.opensudoku.gui.FileListActivity">
        </activity>

        <activity android:launchMode="singleTask" android:name="com.bhulok.sdk.android.ux.WelcomeActivity" android:theme="@style/Theme.Bhulok.Dialog">
        </activity>
        <activity android:name="com.fairket.sdk.android.LockActivity" android:theme="@style/Theme.Bhulok.Dialog">
        </activity>
        <meta-data android:name="FAIRKET_SDK_KEY" android:value="FairketApp"/>
        <activity android:name="com.bhulok.sdk.android.model.iap.test.TestIAPActivity" android:screenOrientation="portrait" android:theme="@style/Theme.Bhulok.Dialog">
        </activity>
        <activity android:label="Fairket Metered App" android:name="com.bhulok.sdk.android.ux.StatsDialogActivity" android:theme="@style/Theme.Bhulok.Dialog">
        </activity>

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
